<!--pages/applist/applist.wxml-->
<ui-sys>
	<view>
		<ui-img mode='cover' ui="radius border" src="/static/img/banner.jpg" width='100%' height="400rpx" />
	</view>

	<view class="ui-container">
		<view class="bg-white mt-4 radius border shadow">
			<ui-title title="支持以下平台" titleColor="text-blue" descUi="text-cyan" desc="不断更新中..." tpl="center-column" hasDot />
		</view>
		<view class="imgBox p-3 bg-white radius border shadow">
			<block class="radius" wx:for="{{$cuData.appList}}" wx:key="index">
				<image class="appImg" mode='aspectFit' src="{{item.image}}" />
			</block>
		</view>
	</view>
</ui-sys>
